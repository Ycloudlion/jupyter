import pandas as pd
import numpy as np

# Leer archivo Excel
df = pd.read_excel("customers.xlsx")

def col(name):
    return df[name].fillna("").astype(str).str.strip() if name in df.columns else pd.Series([""] * len(df))

# Crear DataFrame mapeado
df_odoo = pd.DataFrame({
    "name": np.where(
        (col("FST_NAM") != "") | (col("LST_NAM") != ""),
        (col("FST_NAM") + " " + col("LST_NAM")).str.strip(),
        col("NAM")
    ),
    "company_type": np.where(col("CUST_TYP").str.upper() == "C", "company", "person"),
    "email": np.where(col("EMAIL_ADRS_1") != "", col("EMAIL_ADRS_1"), col("EMAIL")),
    "phone": col("PHONE_1"),
    "street": col("ADRS_1"),
    "street2": col("ADRS_2"),
    "city": col("CITY"),
    "zip": col("ZIP_COD"),
    "country_id": "Canada",
    "function": "",
    "vat": col("TAX_ID"),
    "category_id": "",
    "user_id": "",
    "property_product_pricelist": "",
    "buyer_id": "",
    "property_purchase_currency_id": "",
    "property_account_position_id": "",
    "comment": col("NAM_UPR")
})

# Limpiar datos
df_odoo = df_odoo.replace(["nan", "NaN", "NONE", None], "", regex=False).fillna("")

# Guardar resultado
df_odoo.to_excel("customers_odoo_clean.xlsx", index=False)

df_odoo.head()


